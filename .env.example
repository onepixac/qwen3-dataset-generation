# OpenRouter API (Required for all generators)
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# OpenAI API (Optional - only for formula generation with GPT-4o)
OPENAI_API_KEY=sk-proj-your-key-here

# HuggingFace Token (Optional - for formula validation)
HF_TOKEN=hf_your_token_here

# Generation Configuration (defaults shown)
MAX_CONCURRENT=45          # Parallel API requests (v2.5-v2.7: 45, v2.0-v2.4: 30)
BATCH_DELAY_MS=500         # Delay between batches (milliseconds)
TEMPERATURE=0.9            # Model temperature (0.0-1.0)
MAX_TOKENS=6000            # Max tokens per response
TOP_P=0.95                 # Nucleus sampling parameter

# Model Selection
MODEL=anthropic/claude-3.5-haiku  # Primary model for generation

# Retry Configuration
MAX_RETRIES=3              # Max retry attempts for failed requests
TIMEOUT_SECONDS=60         # Request timeout

# Checkpointing
CHECKPOINT_INTERVAL=100    # Save checkpoint every N examples
AUTO_RESUME=true           # Resume from last checkpoint on restart

# Logging
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true           # Save logs to file
